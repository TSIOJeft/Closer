<UserControl x:Class="Closer.ui.NoticeCardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Closer.ui"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
   <Border Background="{Binding backColor}" CornerRadius="10">
       <StackPanel>
           <StackPanel Orientation="Horizontal">
               <TextBlock FontFamily="{StaticResource SegoeFluentIcons}" Text="{Binding icon}"></TextBlock>
               <TextBlock Text="{Binding title}" Margin="4"></TextBlock>
           </StackPanel>
           <TextBlock Text="{Binding summary}" TextWrapping="Wrap"></TextBlock>
           
       </StackPanel>
       
   </Border>
</UserControl>
